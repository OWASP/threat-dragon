{
  "name": "owasp-threat-dragon",
  "version": "1.3.1",
  "private": false,
  "scripts": {
    "build": "npm run-script bundle && npm run-script bundle-minify && npm run-script bundle-css && npm run-script bundle-minify-css && npm run-script copy-fonts",
    "build-templates": "browserify -t [browserify-ng-html2js --module templates] ./public/app/templates.build.js -o ./public/app/templates.js",
    "copy-fonts": "./node_modules/.bin/copyfiles -f ./node_modules/font-awesome/fonts/*.* ./node_modules/bootstrap/dist/fonts/*.* ./public/fonts",
    "bundle-css": "./node_modules/.bin/rework-npm ./public/content/app.css -o ./public/content/threatdragon.css",
    "minify-css": "./node_modules/.bin/uglifycss ./public/content/threatdragon.css > ./public/content/threatdragon.min.css",
    "bundle-minify-css": "npm run-script bundle-css && npm run-script minify-css",
    "bundle": "browserify --debug ./public/app/app.js -o ./public/app/threatdragon.js",
    "bundle-minify": "browserify ./public/app/app.js -d -p [minifyify --map ./public/app/threatdragon.js.map --output ./public/app/threatdragon.js.map ] > ./public/app/threatdragon.min.js",
    "tsc": "tsc",
    "start": "node dist/server.js",
    "pretest": "node ./node_modules/jshint/bin/jshint --verbose --show-non-errors server",
    "test": "npm run-script test-client-firefox && npm run-script test-server",
    "test-client-phantomjs": "./node_modules/.bin/karma start --single-run --browsers PhantomJS",
    "test-client-firefox": "./node_modules/.bin/karma start --single-run --browsers Firefox",
    "test-client-chrome": "./node_modules/.bin/karma start --single-run --browsers Chrome",
    "test-client-ie": "./node_modules/.bin/karma start --single-run --browsers IE",
    "test-server": "ts-node node_modules/istanbul/lib/cli.js cover --include-all-sources  --root ./server/ --dir ./coverage/Server/ ./td.tests/serverspec/support/jasmine-runner.js",
    "test-local": "npm run-script pretest && npm run-script test-client-chrome && npm run-script test-client-ie && npm run-script test-client-phantomjs && npm run-script test-client-firefox && npm run-script test-server",
    "citest": "./node_modules/.bin/karma start --single-run false --browsers Firefox",
    "codecov": "./node_modules/.bin/codecov"
  },
  "description": "OWASP Threat Dragon - a free, open source threat modelling tool",
  "author": {
    "name": "mike.goodwin",
    "email": "mike.goodwin@owasp.org"
  },
  "license": "Apache-2.0",
  "homepage": "https://threatdragon.github.io/",
  "repository": {
    "type": "git",
    "url": "git://github.com/owasp/threat-dragon.git"
  },
  "dependencies": {
    "angular": "1.8.2",
    "angular-animate": "1.8.2",
    "angular-route": "1.8.2",
    "angular-ui-bootstrap": "2.5.6",
    "angular-xeditable": "^0.10.0",
    "body-parser": "^1.19.0",
    "bunyan": "1.8.14",
    "connect-azuretables": "1.0.20",
    "connect-ensure-login": "0.1.1",
    "cookie-parser": "^1.4.4",
    "csurf": "^1.10.0",
    "express": "^4.17.1",
    "express-bunyan-logger": "^1.3.3",
    "express-session": "^1.16.2",
    "font-awesome": "4.7.0",
    "helmet": "^3.18.0",
    "jquery": "^3.4.1",
    "lodash": "^4.17.19",
    "morgan": "1.10.0",
    "octonode": "0.9.5",
    "owasp-threat-dragon-core": "^1.3.2",
    "passport": "0.4.1",
    "passport-github": "1.1.0",
    "pug": "^2.0.4",
    "pug-bootstrap": "0.0.16",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "@types/jasmine": "^3.6.2",
    "@types/node": "^14.14.10",
    "angular-mocks": "1.8.0",
    "browserify": "^16.3.0",
    "browserify-css": "^0.15.0",
    "browserify-istanbul": "3.0.1",
    "browserify-ng-html2js": "1.3.0",
    "codecov": "^3.6.5",
    "copyfiles": "^2.1.1",
    "debug": "^4.1.1",
    "istanbul": "0.4.5",
    "jasmine": "^2.99.0",
    "jasmine-core": "^3.4.0",
    "jasmine-jquery": "2.1.1",
    "jasmine-node": "^3.0.0",
    "jasmine-spec-reporter": "4.2.1",
    "jasmine-ts": "^0.3.0",
    "jshint": "^2.10.2",
    "karma": "^3.1.4",
    "karma-browserify": "^6.0.0",
    "karma-chrome-launcher": "^3.0.0",
    "karma-coverage": "^1.1.2",
    "karma-firefox-launcher": "^1.1.0",
    "karma-ie-launcher": "1.0.0",
    "karma-jasmine": "^2.0.1",
    "karma-ng-html2js-preprocessor": "1.0.0",
    "karma-phantomjs-launcher": "1.0.4",
    "karma-phantomjs-shim": "1.5.0",
    "karma-spec-reporter": "0.0.32",
    "karma-threshold-reporter": "^0.1.15",
    "karma-xml-reporter": "0.1.4",
    "minifyify": "7.3.5",
    "mockery": "2.1.0",
    "npm-html2js": "0.1.8",
    "passport-local": "1.0.0",
    "phantomjs-polyfill-find": "0.0.1",
    "phantomjs-prebuilt": "2.1.16",
    "requirejs": "^2.3.6",
    "rework-npm-cli": "0.1.3",
    "supertest": "^4.0.2",
    "ts-mockery": "^1.2.0",
    "ts-node": "^9.1.0",
    "typescript": "^4.1.2",
    "uglifycss": "0.0.29",
    "watchify": "^3.11.1"
  }
}
