{
  "name": "threat-dragon-server",
  "version": "2.4.1",
  "private": true,
  "type": "module",
  "scripts": {
    "audit:server": "npm audit --production || echo 'Vulnerabilities found - review required' && exit 0",
    "build:server": "npm-run-all clean:dist transpile",
    "make-sbom:server": "npm-run-all -lp --aggregate-output make-sbom:xml:server make-sbom:json:server",
    "make-sbom:xml:server": "npm --loglevel=error exec -- cyclonedx-npm --omit=dev --ignore-npm-errors --spec-version=1.5 --output-format=XML  --output-file=sbom.xml",
    "make-sbom:json:server": "npm --loglevel=error exec -- cyclonedx-npm --omit=dev --ignore-npm-errors --spec-version=1.5 --output-format=JSON --output-file=sbom.json",
    "clean:server": "rimraf *.log .nyc_output/ coverage/ dist/ node_modules/",
    "clean:dist": "rimraf dist",
    "dev:server": "nodemon dev.js --exec babel-node",
    "dev:server:pm2": "pm2 --name td.server start 'nodemon dev.js --exec babel-node'",
    "lint:server": "cd .. && npm run lint:server",
    "lint:ci": "cd .. && eslint --ext .js td.server/src --max-warnings 100",
    "lint:fix:server": "cd .. && npm run lint:fix:server",
    "pretest": "npm run lint:server",
    "start:server": "npm run start:server:pm2",
    "start:server:pm2": "NODE_ENV=production pm2 --name td.server start 'node index.js'",
    "stop:server": "pm2 delete td.server",
    "transpile": "babel ./src --out-dir dist",
    "test:server": "NODE_ENV=test nyc mocha --config .mocharc.json test/*.spec.js test/**/*.spec.js",
    "test:unit": "NODE_ENV=test nyc --reporter=lcov --reporter=text-summary mocha --config .mocharc.json test/*.spec.js test/**/*.spec.js",
    "test:external-apis": "NODE_ENV=test USE_REAL_APIS=true nyc --reporter=lcov --reporter=text-summary mocha --config .mocharc.json test/*.spec.js test/**/*.spec.js"
  },
  "description": "OWASP Threat Dragon - a free, open source threat modeling tool",
  "author": {
    "name": "OWASP Threat Dragon",
    "email": "jon.gadsden@owasp.org",
    "url": "https://owasp.org/www-project-threat-dragon/"
  },
  "license": "Apache-2.0",
  "homepage": "https://github.com/OWASP/www-project-threat-dragon/",
  "repository": {
    "type": "git",
    "url": "git://github.com/OWASP/threat-dragon.git"
  },
  "bugs": {
    "email": "jon.gadsden@owasp.org",
    "url": "https://github.com/OWASP/threat-dragon/issues"
  },
  "dependencies": {
    "@gitbeaker/rest": "^39.34.2",
    "bitbucket": "^2.11.0",
    "express": "^5.0.1",
    "express-rate-limit": "^7.4.0",
    "googleapis": "^144.0.0",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "node-fetch": "^2.7.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@cyclonedx/cyclonedx-npm": "^2.1.0",
    "better-sqlite3": "^11.9.1",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.2",
    "dotenv-flow": "^4.1.0",
    "nock": "^14.0.2",
    "sinon": "^10.0.0",
    "sinon-chai": "^3.7.0",
    "supertest": "^4.0.2"
  },
  "overrides": {
    "libxmljs2": "0.30.0"
  }
}
