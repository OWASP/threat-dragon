{
  "name": "threat-dragon-server",
  "version": "2.4.1",
  "private": true,
  "type": "module",
  "scripts": {
    "audit:server": "npm audit --omit=dev || echo 'Vulnerabilities found - review required' && exit 0",
    "build:server": "npm-run-all clean:server transpile",
    "make-sbom:server": "npm-run-all -lp --aggregate-output make-sbom:xml:server make-sbom:json:server",
    "make-sbom:xml:server": "npm --loglevel=error exec -- cyclonedx-npm --omit=dev --ignore-npm-errors --spec-version=1.5 --output-format=XML  --output-file=sbom.xml",
    "make-sbom:json:server": "npm --loglevel=error exec -- cyclonedx-npm --omit=dev --ignore-npm-errors --spec-version=1.5 --output-format=JSON --output-file=sbom.json",
    "clean:server": "rimraf --glob *.log .nyc_output/ coverage/ dist/",
    "dev:server": "nodemon dev.js --exec babel-node",
    "dev:server:pm2": "pm2 --name td.server start 'nodemon dev.js --exec babel-node'",
    "lint": "eslint --ext .js src",
    "lint:server": "eslint --ext .js src",
    "lint:ci": "eslint --ext .js src --max-warnings 100",
    "lint:fix:server": "eslint --ext .js src --fix",
    "pretest": "npm run lint:server",
    "start:server": "npm run start:server:pm2",
    "start:server:pm2": "NODE_ENV=production pm2 --name td.server start 'node index.js'",
    "stop:server": "pm2 delete td.server",
    "transpile": "npx babel ./src --out-dir dist",
    "test:server": "NODE_ENV=test npx nyc npx mocha --config .mocharc.json test/*.spec.js test/**/*.spec.js",
    "test:unit": "NODE_ENV=test npx nyc --reporter=lcov --reporter=text-summary npx mocha --config .mocharc.json test/*.spec.js test/**/*.spec.js",
    "test:external-apis": "NODE_ENV=test USE_REAL_APIS=true npx nyc --reporter=lcov --reporter=text-summary npx mocha --config .mocharc.json test/*.spec.js test/**/*.spec.js"
  },
  "description": "OWASP Threat Dragon - a free, open source threat modeling tool",
  "author": {
    "name": "OWASP Threat Dragon",
    "email": "jon.gadsden@owasp.org",
    "url": "https://owasp.org/www-project-threat-dragon/"
  },
  "license": "Apache-2.0",
  "homepage": "https://github.com/OWASP/www-project-threat-dragon/",
  "repository": {
    "type": "git",
    "url": "git://github.com/OWASP/threat-dragon.git"
  },
  "bugs": {
    "email": "jon.gadsden@owasp.org",
    "url": "https://github.com/OWASP/threat-dragon/issues"
  },
  "dependencies": {
    "@gitbeaker/rest": "^39.34.2",
    "axios": "^1.9.0",
    "bitbucket": "^2.11.0",
    "dotenv": "^16.4.7",
    "express": "^5.0.1",
    "express-rate-limit": "^7.4.0",
    "googleapis": "^144.0.0",
    "helmet": "^6.0.1",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.0",
    "node-fetch": "^2.7.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.27.0",
    "@babel/core": "^7.26.10",
    "@babel/node": "^7.26.0",
    "@babel/plugin-transform-runtime": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/register": "^7.25.9",
    "@babel/runtime": "^7.26.10",
    "better-sqlite3": "^11.9.1",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.2",
    "dotenv-flow": "^4.1.0",
    "eslint": "^8.57.1",
    "eslint-plugin-cypress": "^3.6.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-vue": "^10.0.0",
    "mocha": "^11.1.0",
    "nock": "^14.0.2",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "nyc": "^17.1.0",
    "pm2": "^5.4.3",
    "rimraf": "^3.0.2",
    "sinon": "^10.0.0",
    "sinon-chai": "^3.7.0",
    "supertest": "^4.0.2"
  },
  "overrides": {
    "ansi-regex@>2.1.1 <5.0.1": ">=5.0.1",
    "glob-parent@<5.1.2": ">=5.1.2",
    "glob": "^7.2.3",
    "micromatch": ">=4.0.8",
    "minimatch": "^3.1.2",
    "minimatch@<3.0.5": ">=3.0.5",
    "rimraf": "^3.0.2",
    "tar-fs": ">=3.0.8"
  },
  "resolutions": {
    "ansi-regex": "5.0.1"
  }
}
